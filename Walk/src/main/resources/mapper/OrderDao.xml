<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.walk.dao.OrderDao">

    <!-- 查询个人中心我的订单 -->
    <select id="selectOrder" resultType="map" parameterType="int">
          SELECT o.`o_id`,o.`u_id`,m.`m_name`,s.`s_title`,o.`o_person`,o.`tools_id`,o.`class_id`,o.`o_price`
          FROM `the_order` o,`mark` m,`scenery` s WHERE u_id=#{u_id} AND o.`m_id`=m.`m_id` AND o.`s_id`=s.`s_id`
    </select>

    <!-- 查询个人中心基本信息 -->
    <select id="selectUserOrder" resultType="User" parameterType="int">
          SELECT u.`u_name`,u.`u_nickname`,u.`u_phone`,u.`u_idcard` FROM `user` u WHERE u.`u_id`= #{u_id}
    </select>
</mapper>